<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:import="clr-namespace:EbaySeller.ViewModel.Source.Import;assembly=EbaySeller.ViewModel"
        Title="EbaySeller" Height="800" Width="1024">
    <Grid>
        <Grid.DataContext>
            <import:MainViewModel/>
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ribbon x:Name="RibbonWindow">
            <RibbonTab Header="Import">
                <RibbonGroup Header="Laden">
                    <RibbonButton Label="Öffne CSV" LargeImageSource="Images/open.png" Command="{Binding ImportRelayCommand}"></RibbonButton>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        
            <DataGrid Grid.Row="1" ItemsSource="{Binding Articles}"></DataGrid>
    </Grid>
</Window>
